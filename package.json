{
  "name": "markdown-explorer",
  "displayName": "Markdown Explorer",
  "description": "See all your markdowns in one place and navigate between them in preview mode.",
  "publisher": "devbrains-com",
  "version": "0.0.1",
  "license": "GPL-3.0-or-later",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:markdown-list"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-list.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "markdown-list.openPreview",
        "title": "Show",
        "icon": "$(preview)"
      },
      {
        "command": "markdown-list.openEdit",
        "title": "Edit Markdown",
        "icon": "$(edit)"
      },
      {
        "command": "markdown-list.viewInExplorer",
        "title": "Reveal in Explorer",
        "icon": "$(go-to-file)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "markdown-list.refreshEntry",
          "when": "view == markdown-list",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "markdown-list.openPreview",
          "when": "view == markdown-list && viewItem =~ /(file|filefolder)/",
          "group": "file@1"
        },
        {
          "command": "markdown-list.openEdit",
          "when": "view == markdown-list && viewItem =~ /(file|filefolder)/",
          "group": "file@2"
        },
        {
          "command": "markdown-list.openEdit",
          "when": "view == markdown-list && viewItem =~ /(file|filefolder)/",
          "group": "inline"
        },
        {
          "command": "markdown-list.viewInExplorer",
          "when": "view == markdown-list",
          "group": "goto@1"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdown-explorer",
          "title": "Markdown Explorer",
          "icon": "/resources/question-circle-solid.svg"
        }
      ]
    },
    "views": {
      "markdown-explorer": [
        {
          "id": "markdown-list",
          "name": "Markdowns"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
